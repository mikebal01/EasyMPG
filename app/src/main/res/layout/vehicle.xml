<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/display_name"
            android:id="@+id/vehicleDisplayName"
            android:paddingTop="50dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorAccent"/>
        <EditText
            android:id="@+id/editTextDisplayName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:hint="@string/crushinator"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/make"
            android:paddingTop="25dp"
            android:layout_marginStart="50dp"
            android:id="@+id/vehicleMake"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/editTextmake"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:hint="@string/toyota"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/model"
            android:paddingTop="25dp"
            android:layout_marginStart="50dp"
            android:id="@+id/vehicleModel"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/editTextModel"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="textPersonName"
            android:hint="@string/_6sprinter"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/production_year"
            android:paddingTop="25dp"
            android:layout_marginStart="50dp"
            android:id="@+id/vehicleProductionYear"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/editTextYear"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:hint="@string/_2020"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/current_odometer"
            android:paddingTop="25dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorAccent"/>

        <EditText
            android:id="@+id/editTextOdometer"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:inputType="number"
            android:hint="@string/_100000"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/odometer_units"
            android:paddingTop="25dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorAccent"/>
        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/radioButtonDistanceKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/km" />

            <RadioButton
                android:id="@+id/radioButtonDistanceMiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/miles" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/default_fill_up_units"
            android:paddingTop="25dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/colorAccent"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/radioButtonFillupLiters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/liters" />

            <RadioButton
                android:id="@+id/radioButtonFillUpUSGallon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/us_gallon" />

            <RadioButton
                android:id="@+id/radioButtonFillUpImperialGallon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/imperial_gallon" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonSaveVehicle"
            android:onClick="saveVehicleClicked"
            android:text="@string/add_vehicle"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"/>
    </LinearLayout>
</ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>